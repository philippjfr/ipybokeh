{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop":true,
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
	"baseUrl": ".",
	"paths": {
	  "@bokehjs/*": ["./node_modules/bokehjs/build/js/lib/*",
					 "./node_modules/bokehjs/build/js/types/*"]
	}
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
